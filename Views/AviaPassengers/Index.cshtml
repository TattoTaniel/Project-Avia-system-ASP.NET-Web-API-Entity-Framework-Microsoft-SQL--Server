@model IEnumerable<Avia_is.Models.AviaPassenger>

@{
    ViewBag.Title = "AviaPassenger";
}

<h2>Информация о пассажире</h2>

<p>
    @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Далее", "Index", "Flights", null, new { @class = "btn btn-warning" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Фамилия </th>
            <th>Имя </th>
            <th>Отчество </th>
            <th>Адрес</th>
            <th>Телефон </th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.IDPassport }) |
                    @Html.ActionLink("Детали", "Details", new { id = item.IDPassport }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.IDPassport })
                </td>
            </tr>
        }
    </tbody>
</table>
