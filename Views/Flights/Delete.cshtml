@model Avia_is.Models.Flight

@{
    ViewBag.Title = "Delete";
}

<h2>Удалить</h2>

<h3>Вы уверены, что хотите выполнить это действие?</h3>
<div>
    <h4>Рейс</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Фамилия</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AviaPassenger.Lastname)
        </dd>

        <dt>
            <label>Дата вылета</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departure_date)
        </dd>

        <dt>
            <label>Время вылета</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departure_time)
        </dd>

        <dt>
            <label>Готовность</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Readiness)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-danger" /> |
            @Html.ActionLink("Вернуться", "Index")
        </div>
    }
</div>
