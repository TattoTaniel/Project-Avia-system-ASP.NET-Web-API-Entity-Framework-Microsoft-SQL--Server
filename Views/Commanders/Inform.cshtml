@model IEnumerable<Avia_is.Models.Commander>

@{
    ViewBag.Title = "Inform";
}

<h2>Информация о командирах</h2>
<p>
    @Html.ActionLink("Вернуться на главную", "Index", "Home", null, new { @class = "btn btn-warning" })

</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Модель </th>
            <th>Фамилия </th>
            <th>Имя </th>
            <th>Отчество </th>
            <th>Адрес</th>
            <th>Налет часов</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Plane.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Flying_hours)
                </td>
            </tr>
        }
    </tbody>
</table>
