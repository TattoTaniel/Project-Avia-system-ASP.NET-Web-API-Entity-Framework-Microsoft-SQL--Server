@model IEnumerable<Avia_is.Models.Commander>

@{
    ViewBag.Title = "Index";
}

<h2>Информация о командире</h2>

<p>
    @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Вернуться на главную", "Index", "Home", null, new { @class = "btn btn-warning" })
</p>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Модель </th>
            <th>Фамилия </th>
            <th>Имя </th>
            <th>Отчество </th>
            <th>Адрес</th>
            <th>Налет часов</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Plane.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Flying_hours)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.IDnumber }) |
                    @Html.ActionLink("Детали", "Details", new { id = item.IDnumber }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.IDnumber })
                </td>
            </tr>
        }
    </tbody>
</table>
